{% extends "TutoAlbumBundle::layout.html.twig" %}

{% set title = "Delete album" %}

{% block content %}

<h1>{{ title }}</h1>

<p>Are you sure that you want to delete '{{ album.title }}' by '{{ album.artist }}'?</p> 

<form action="{{ path('_delete', {'id': album.id}) }}" method="post">
    <input type="submit" value="Yes" name="confirm"/>
    <input type="submit" value="No" name="cancel"/>
</form>

{% endblock %}
