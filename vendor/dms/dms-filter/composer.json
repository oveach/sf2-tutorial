{
    "name":        "dms/dms-filter",
    "type":        "library",
    "description": "DMS Filter provides Annotation based entity filtering.",
    "keywords":    ["filter", "dms"],
    "homepage":    "https://github.com/rdohms/dms-filter",
    "license":     "MIT",

    "authors": [
        {
            "name": "Rafael Dohms",
            "homepage": "http://doh.ms"
        }
    ],

    "require": {
        "php":  ">=5.3.2",
        "doctrine/annotations": "~1.1"
    },

    "autoload": {
        "psr-0": {
            "DMS": ["src","tests"]
        }
    },

    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "doctrine/cache": "~1.3",
        "zendframework/zend-filter": "~2.0"
    },

    "suggest": {
        "zendframework/zend-filter": "Use Zend Filters via DMS Filter"
    },

    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.zendframework.com/"
        }
    ]
}
